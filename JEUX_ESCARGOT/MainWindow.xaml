<Window
    x:Class="JEUX_ESCARGOT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JEUX_ESCARGOT"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Nourri ta famille"
    Width="1317"
    Height="734"
    KeyDown="Fenetre_TouchePressee"
    KeyUp="Fenetre_ToucheLevee"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="905*" />
            <ColumnDefinition Width="412*" />
        </Grid.ColumnDefinitions>
        <Canvas Name="myCanvas" Grid.ColumnSpan="2">
            <Canvas.Background>
                <ImageBrush ImageSource="/ressource/img/route.png" Stretch="Fill" />
            </Canvas.Background>
            <Label
                x:Name="point"
                Canvas.Left="43"
                Canvas.Top="14"
                Width="24"
                Height="28"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Black"
                Content="0"
                Foreground="White"
                Opacity="0.8" />
            <Image
                x:Name="escargot"
                Canvas.Left="542"
                Canvas.Top="186"
                Width="128"
                Height="123"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/ressource/img/escargot-droit.png"
                Stretch="Fill" />
            <Image
                Canvas.Left="736"
                Canvas.Top="99"
                Width="260"
                Height="520"
                Source="/ressource/img/voiture1.png"
                Stretch="Fill" />
        </Canvas>

        <!--  Menu de pause  -->
        <Grid
            x:Name="PauseMenu"
            Grid.ColumnSpan="2"
            Background="#80000000"
            Visibility="Collapsed">
            <Border
                Width="400"
                Height="300"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        Text="Menu" />
                    <Button
                        x:Name="SonButton"
                        Width="200"
                        Height="50"
                        Margin="0,10"
                        Click="BoutonSon_Clic"
                        Content="Son" />
                    <Button
                        x:Name="ResolutionButton"
                        Width="200"
                        Height="50"
                        Margin="0,10"
                        Click="BoutonResolution_Clic"
                        Content="Résolution" />
                    <Button
                        x:Name="ReprendreButton"
                        Width="200"
                        Height="50"
                        Margin="0,10"
                        Click="BoutonReprendre_Clic"
                        Content="Reprendre" />
                </StackPanel>
            </Border>
        </Grid>
        <Image
            x:Name="imageSaladeGauche"
            Margin="381,-157,426,725"
            Source="/ressource/img/salade1bg.png"
            Stretch="Fill" />
    </Grid>
</Window>
